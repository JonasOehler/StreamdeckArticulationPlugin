{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
  "UUID": "com.jonasoehler.cubase.articulation",
  "Author": "Jonas Oehler",
  "Name": "Cubase Articulations",
  "Description": "Steuert Articulations via MIDI aus Cubase-Tracknamen und bietet zusätzliche Command-Tasten.",
  "Version": "1.2.0",
  "Icon": "assets/icon",
  "URL": "https://example.com",

  "Actions": [
    {
      "Name": "Articulation Key",
      "UUID": "com.jonasoehler.cubase.articulation.key",
      "Tooltip": "Sendet eine Articulation (Note) bei Tastendruck",
      "Icon": "assets/defaultKey",
      "Controllers": ["Keypad"],
      "States": [
        {
          "Image": "assets/defaultKey",
          "ShowTitle": false,
          "TitleAlignment": "middle",
          "FontSize": 14
        }
      ],
      "SupportedInMultiActions": true
    },

    {
      "Name": "Cubase Command",
      "UUID": "com.jonasoehler.cubase.command",
      "Tooltip": "MIDI-CC Slot mit Status (2 States). Icons pro State in der SD-Software wählbar.",
      "Icon": "assets/commandKey",
      "Controllers": ["Keypad"],
      "States": [
        {
          "Image": "assets/command/inactive",
          "ShowTitle": false,
          "TitleAlignment": "middle",
          "FontSize": 14
        },
        {
          "Image": "assets/command/active",
          "ShowTitle": false,
          "TitleAlignment": "middle",
          "FontSize": 14
        }
      ],
      "SupportedInMultiActions": true,
      "PropertyInspectorPath": "pi-command.html"
    }
  ],

  "Category": "Cubase",
  "CategoryIcon": "assets/category",
  "CodePath": "plugin.js",
  "SDKVersion": 2,
  "Software": { "MinimumVersion": "6.6" },
  "OS": [
    { "Platform": "mac", "MinimumVersion": "10.15" },
    { "Platform": "windows", "MinimumVersion": "10" }
  ],
  "Nodejs": { "Version": "20" }
}
